{
  "name": "claude-reminders",
  "version": "1.0.0",
  "description": "Cross-platform reminders app with AI assist, built with React",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "electron:dev": "vite build && electron .",
    "electron:build": "vite build && electron-builder --mac",
    "cap:init": "cap init 'Claude Reminders' com.claudereminders.app --web-dir dist",
    "cap:add:ios": "cap add ios",
    "cap:add:android": "cap add android",
    "cap:sync": "cap sync",
    "cap:open:ios": "cap open ios",
    "cap:open:android": "cap open android",
    "mobile:build": "npm run build && cap sync"
  },
  "build": {
    "appId": "com.claudereminders.app",
    "productName": "Claude Reminders",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ]
    }
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@capacitor/android": "^7.2.0",
    "@capacitor/cli": "^7.2.0",
    "@capacitor/core": "^7.2.0",
    "@capacitor/ios": "^7.2.0",
    "@capacitor/local-notifications": "^7.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.1.4",
    "electron": "^35.1.2",
    "electron-builder": "^26.0.12",
    "jsdom": "^28.1.0",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.0.0",
    "vitest": "^4.0.18"
  }
}
